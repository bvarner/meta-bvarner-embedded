/*
 * TI ADS1115 multi-channel ADC overlay
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c_arm>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			ads1115: ads1115 {
				compatible = "ti,ads1115";
				status = "okay";
				#address-cells = <1>;
				#size-cells = <0>;
				#io-channel-cells = <1>;
				reg = <0x48>;
				
				/*
				 * Channel A (IN0) Configured for Atlas Scientific analog PH.
				 */
				channel_a: channel_a {
					reg = <4>;
					ti,gain = <1>;
					ti,datarate = <7>;
				};

				/*
				 * Channels B, C, D configured for 100k NTC Thermistors
				 */
				channel_b: channel_b {
					reg = <5>;
					ti,gain = <1>;
					ti,datarate = <7>;
				};
	
				channel_c: channel_c {
					reg = <6>;
					ti,gain = <1>;
					ti,datarate = <7>;
				};
	
				channel_d: channel_d {
					reg = <7>;
					ti,gain = <1>;
					ti,datarate = <7>;
				};
			};
		};
	};

	
	fragment@1 {
		target-path = "/";
		__overlay__ {
			iio-hwmon {
				compatible = "iio-hwmon";
				io-channels = <&ads1115 0>, <&ads1115 1>, <&ads1115 2>, <&ads1115 3>;
			};
		};
	};
	
	fragment@2 {
		target-path = "/clocks/clock@3";
		__overlay__ {
			#io-channel-cells = <0>;
		};
	};
	
	fragment@3 {
		target = <&dsi1>;
		__overlay__ {
			#io-channel-cells = <0>;
		};
	};
	
	fragment@4 {
		target-path = "/";
		__overlay__ {
			therm0: therm@0 {
				compatible = "murata,ncp03wf104";
				pullup-uv = <3300000>;
				pullup-ohm = <4700>;
				pulldown-ohm = <0>;
				io-channels = <&ads1115 1>;
			};
			
			therm1: therm@1 {
				compatible = "murata,ncp03wf104";
				pullup-uv = <3300000>;
				pullup-ohm = <4700>;
				pulldown-ohm = <0>;
				io-channels = <&ads1115 2>;
			};
			
			therm2: therm@2 {
				compatible = "murata,ncp03wf104";
				pullup-uv = <3300000>;
				pullup-ohm = <4700>;
				pulldown-ohm = <0>;
				io-channels = <&ads1115 3>;
			};
		};
	};
	
	__exports__ {
		ads1115;
		therm0;
		therm1;
		therm2;
	};
	
	__overrides__ {
		adc_in0_cfg =         <&channel_a>,"reg:0";
		adc_in0_gain =        <&channel_a>,"ti,gain:0";
		adc_in0_datarate =    <&channel_a>,"ti,datarate:0";
		adc_in1_cfg =         <&channel_b>,"reg:0";
		adc_in1_gain =        <&channel_b>,"ti,gain:0";
		adc_in1_datarate =    <&channel_b>,"ti,datarate:0";
		adc_in2_cfg =         <&channel_c>,"reg:0";
		adc_in2_gain =        <&channel_c>,"ti,gain:0";
		adc_in2_datarate =    <&channel_c>,"ti,datarate:0";
		adc_in3_cfg =         <&channel_d>,"reg:0";
		adc_in3_gain =        <&channel_d>,"ti,gain:0";
		adc_in3_datarate =    <&channel_d>,"ti,datarate:0";
	};
};